<style>
.illuminate {
    /* box-shadow: 0 0 32px 8px #fff, 0 0 64px 16px #00eaff80; */
    border-color: white;
    color: white;
    transition: box-shadow 0.4s, border-color 0.4s;
    background: linear-gradient(90deg, #00eaff22 0%, #fff0 100%);
}
.step-number {
    color: #a3a3a384;
    transform: scale(1);
    transition: color 0.5s, transform 0.5s;
}
.step-number.active {
    color: #fff;
    transform: scale(1.08);
}
</style>

<script is:inline>
if (typeof window !== 'undefined') {
  const steps = [1,2,3,4];
  steps.forEach((num) => {
    const step = document.getElementById(`step-${num}`);
    if (!step) return;
    const textContainer = step.querySelector('div.col-span-4');
    const number = step.querySelector('h2.step-number');
    if (!textContainer || !number) return;
    const observer = new window.IntersectionObserver(
      ([entry]) => {
        if (entry.intersectionRatio >= 0.7) {
          textContainer.classList.add('illuminate');
          number.classList.add('active');
        } else {
          textContainer.classList.remove('illuminate');
          number.classList.remove('active');
        }
      },
      { threshold: [0.7, 1] }
    );
    observer.observe(step);
  });
}
</script>
